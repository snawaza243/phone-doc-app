<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wifi">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/wifi" />

    <TextView
        android:id="@+id/sensorsTestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Features Analysis"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintVertical_bias="0.262" />

    <TextView
        android:id="@+id/showWifiModule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Module"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/showWifiCondition"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/showWifiState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Status: On/Off"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/showWifiCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Condition"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/showWifiState"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.534" />

    <Button
        android:id="@+id/btn_toggle_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle WiFi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />




</androidx.constraintlayout.widget.ConstraintLayout>